version: '3.8'

services:
  # 1. Zookeeper
  zookeeper:
    image: confluentinc/cp-zookeeper:7.4.0
    container_name: zookeeper
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    ports:
      - "2181:2181"
    networks:
      - retail-net

  # 2. Apache Kafka
  kafka:
    image: confluentinc/cp-kafka:7.4.0
    container_name: kafka
    depends_on:
      - zookeeper
    ports:
      - "9092:9092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      # For WSL/Localhost
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
    networks:
      - retail-net

  # 3. PostgreSQL
  postgres:
    image: postgres:15
    container_name: postgres
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: password
      POSTGRES_DB: retail_analytics
    ports:
      - "5432:5432"
    volumes:
      # Mount file init.sql từ thư mục hiện tại vào container
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql
      # Persist data vào volume của Docker (nhanh hơn mount file host)
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U admin"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - retail-net

  # 4. Flink JobManager
  jobmanager:
    #image: flink:1.17-java11
    build: 
      context: .
      dockerfile: Dockerfile.Flink # <-- THÊM DÒNG NÀY
    container_name: jobmanager
    ports:
      - "8081:8081"
    command: jobmanager
    environment:
      - |
        FLINK_PROPERTIES=
        jobmanager.rpc.address: jobmanager
      - FLINK_CLASSPATH=/opt/flink/extra_lib/*
    networks:
      - retail-net
    volumes:
      - ./flink_extra_lib:/opt/flink/extra_lib
      - .:/app
     
    
  # 5. Flink TaskManager
  taskmanager:
    #image: flink:1.17-java11
    build: 
      context: .
      dockerfile: Dockerfile.Flink # <-- THÊM DÒNG NÀY
    container_name: taskmanager
    depends_on:
      - jobmanager
    command: taskmanager
    links:
      - "jobmanager:jobmanager"
    environment:
      - |
        FLINK_PROPERTIES=
        jobmanager.rpc.address: jobmanager
        taskmanager.numberOfTaskSlots: 2
      - FLINK_CLASSPATH=/opt/flink/extra_lib/*
    networks:
      - retail-net
    volumes:
      - ./flink_extra_lib:/opt/flink/extra_lib
      - .:/app

  # 6. Metabase Dashboard (Công cụ BI)
  metabase:
    image: metabase/metabase:latest
    container_name: metabase
    ports:
      - "3000:3000"
    environment:
      MB_DB_TYPE: postgres
      MB_DB_DBNAME: metabase_db
      MB_DB_USER: admin
      MB_DB_PASS: password
      MB_DB_HOST: postgres # Kết nối tới service postgres
      MB_DB_PORT: 5432
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - retail-net
    volumes:
      - metabase_data:/var/lib/metabase

  backend_django:
    build: .  # Build từ Dockerfile ở thư mục hiện tại
    container_name: store_backend
    command: sh entrypoint.sh # Chạy script khởi tạo
    ports:
      - "8000:8000" # Expose ra localhost:8000
    depends_on:
      - kafka # Chờ Kafka lên xong mới chạy App (optional)
    volumes:
      - .:/app # Mount code để dev (sửa code local -> docker cập nhật ngay)
    environment:
      - DJANGO_DEBUG=True
      - DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend_django
# --- CẤU HÌNH ORACLE (Sửa theo công thức vừa chạy thành công) ---
      - DB_ENGINE=django.db.backends.oracle
      # Thay dòng dưới bằng Endpoint lấy trong AWS Console (mục Connectivity & security)
      - DB_HOST=database-1.cyxxxxx.ap-southeast-1.rds.amazonaws.com
      - DB_PORT=1521
      # Tên DB mặc định khi tạo RDS Oracle thường là ORCL hoặc DATABASE
      - DB_NAME=ORCL
      # User/Pass cậu đặt lúc tạo RDS
      - DB_USER=admin 
      - DB_PASSWORD=mat_khau_cua_cau
      
      # Cấu hình Kafka (trỏ nội bộ trong Docker nên giữ nguyên hoặc dùng tên service)
      - KAFKA_BOOTSTRAP_SERVERS=kafka:29092
    extra_hosts:
      # Cho phép container nhìn thấy máy host (Windows) qua tên host.docker.internal
      - "host.docker.internal:host-gateway"
    networks:
      - retail-net

# Định nghĩa network riêng để các service nhìn thấy nhau bằng tên
networks:
  retail-net:
    driver: bridge

# Định nghĩa volume để lưu data bền vững
volumes:
  postgres_data:
  metabase_data:
